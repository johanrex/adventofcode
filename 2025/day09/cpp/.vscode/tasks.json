{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure (Ninja, Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure (Ninja, Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Build (Ninja)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure + Build (Ninja, Release)",
            "dependsOn": [
                "CMake: Configure (Ninja, Release)",
                "CMake: Build (Ninja)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CMake: Configure + Build (Ninja, Debug)",
            "dependsOn": [
                "CMake: Configure (Ninja, Debug)",
                "CMake: Build (Ninja)"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}